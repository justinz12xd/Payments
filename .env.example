# ===========================================
# Love4Pets Payment Service - Environment
# ===========================================

# Aplicación
DEBUG=true
ENVIRONMENT=development

# Base de datos PostgreSQL (Supabase)
DATABASE_URL=postgresql://postgres.xxxxx:password@aws-0-us-west-2.pooler.supabase.com:6543/postgres?pgbouncer=true
SUPABASE_URL=https://xxxxx.supabase.co

# Redis (para idempotencia)
REDIS_URL=redis://localhost:6379/0

# Stripe
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# Proveedor de pago: "stripe" o "mock"
PAYMENT_PROVIDER=mock

# HMAC para firmar webhooks a partners
HMAC_DEFAULT_SECRET=your-secret-key-here

# WebSocket Service (para notificaciones en tiempo real)
WEBSOCKET_SERVICE_URL=http://localhost:4000

# n8n Webhook URL (para orquestación)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/payments
